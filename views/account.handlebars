<h1>Manage Your Account</h1>
<section>
    <form class="distinct">
        <h2>Your Profile</h2>
        <h3>General</h3>
        <div>
            <label for="name-prefix">Prefix:</label>
            <input type="text" name="name-prefix" id="name-prefix" class="distinct" />
        </div>
        <div>
            <label for="first-name">First Name*:</label>
            <input type="text" name="first-name" id="first-name" class="distinct" />
        </div>
        <div>
            <label for="last-name">Last Name*:</label>
            <input type="text" name="last-name" id="last-name" class="distinct" />
        </div>

        <div>
            <label for="profile-title">Profile Title*:</label>
            <input type="text" name="profile-title" id="profile-title" />
        </div>

        <div>
            <label for="internal-email">Internal Email*:</label>
            <input type="email" disabled="disabled" name="internal-email" id="internal-email" value="sample@sample.com" />
        </div>

        <div>
            <label for="contact-email">Contact Email:</label>
            <input type="email" name="contact-email" id="contact-email" value="sample@sample.com" />
        </div>

        <br />
        <h3>Media Links</h3>
        <div>
            <label for="linkedin-url">LinkedIn Profile URL:</label>
            <input type="url" name="linkedin-url" id="linkedin-url" />
        </div>
        <div>
            <label for="slack-url">Slack Profile URL:</label>
            <input type="url" name="slack-url" id="slack-url" />
        </div>
        <div>
            <label for="twitter-url">Twitter Profile URL:</label>
            <input type="url" name="twitter-url" id="slack-url" />
        </div>

        <br />
        <h3>Tags</h3>
        <div>
            Tag picker
        </div>

        <div>
            Location picker
        </div>

        <br />
        <!-- If Founder/Admin -->
        <h2>Manage Company</h2>
        <div>

        </div>

    </form>
</section>
<br />
<button class="btn btn-danger" id="sign-out">Sign out</button>
